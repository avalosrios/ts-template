{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "__tests__/**/*"]
}
